{
  "name": "movies-app-backend",
  "version": "1.0.0",
  "description": "Movies API with Express, TypeScript, and Sequelize",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "echo 'Vercel builds TypeScript automatically'",
    "start": "node dist/index.js",
    "db:sync": "ts-node src/scripts/syncDatabase.ts",
    "db:seed": "ts-node src/scripts/seedDatabase.ts",
    "deploy:prepare": "git add . && git commit -m 'feat: prepare for deployment' && git push"
  },
  "keywords": [
    "express",
    "typescript",
    "sequelize",
    "movies",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.20.0",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.0"
  },
  "devDependencies": {
    "@swc/jest": "^0.2.39",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@vercel/node": "^5.5.8",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
